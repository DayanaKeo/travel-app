generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String?
  role      Role     @default(USER)
  premium   Boolean  @default(false)
  createdAt DateTime @default(now())
  voyages   Voyage[]
}

enum Role { USER ADMIN }

model Voyage {
  id          Int       @id @default(autoincrement())
  userId      Int
  titre       String
  description String?
  dateDebut   DateTime
  dateFin     DateTime
  image       String?
  user        User      @relation(fields: [userId], references: [id])
  etapes      Etape[]
  partages    Partage[]
  createdAt   DateTime  @default(now())
}

model Etape {
  id         Int      @id @default(autoincrement())
  voyageId   Int
  latitude   Decimal  @db.Decimal(10,8)
  longitude  Decimal  @db.Decimal(11,8)
  adresse    String
  texte      String?
  date       DateTime
  titre      String
  voyage     Voyage   @relation(fields: [voyageId], references: [id])
  medias     Media[]
  createdAt  DateTime @default(now())
}

model Media {
  id        Int      @id @default(autoincrement())
  etapeId   Int
  type      MediaType
  url       String
  uploadedAt DateTime @default(now())
  etape     Etape    @relation(fields: [etapeId], references: [id])
}
enum MediaType { IMAGE VIDEO }

model Partage {
  id           Int      @id @default(autoincrement())
  voyageId     Int
  codePinHash  String
  expiration   DateTime
  token        String   @unique       // jeton de lien public
  createdAt    DateTime @default(now())
  voyage       Voyage   @relation(fields: [voyageId], references: [id])
}
